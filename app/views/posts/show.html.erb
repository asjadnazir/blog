<div id="post_show_content" class="skinny_wrapper wrapper_padding">
		<header>
			<p class="date"><%= @post.created_at.strftime('%A, %B %d') %></p>
			<h1><a href="#"><%= @post.title %></a></h1>
			<hr>
		</header>

		<div id="content">
			<%= @post.content %>
		</div>

		<hr>

		<div id="share_box">
			<p>Share The DO List</p>
			<a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %>by @asjadnazir - &amp;url_for([@post, {only_path: false}]) %>', 'blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>
			<a onclick="javascript:window.open('http://www.facebook.com/sharer.php?u=<%= url_for([@post, {only_path: false}]) %>', 'blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-facebook"></i></a>
			<a onclick="javascript:window.open('http://plus.google.com/share?url=<%= url_for([@post, {only_path: false}]) %>', 'blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-google-plus"></i></a>
		</div>

		<hr>
		
	</div>
